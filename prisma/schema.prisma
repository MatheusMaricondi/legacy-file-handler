// Data source
datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

// Generator
generator client {
    provider = "prisma-client-js"
    previewFeatures = ["mongodb"]
}

// Data model

model OrderProduct {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    value        String
    order_id     Int
    product_id   Int
    order       Order     @relation(fields: [order_id], references: [id])
    product     Product   @relation(fields: [product_id], references: [id])

    @@map("order_product")
}
model Product {
    id Int @id @map("_id")   
    orders OrderProduct[]
    
    @@map("product")
}

model Order {
    id Int @id @map("_id")    
    date     String
    total    String
    user_id     Int
    products OrderProduct[]
    user   User   @relation(fields: [user_id], references: [id])

    @@map("order")
}

model User {
    id Int @id @map("_id")    
    name    String @unique
    order Order[]
    @@map("user")
}
